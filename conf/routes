# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                                     controllers.Application.index(page: Int ?= 0)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                         controllers.Assets.versioned(path="/public", file: Asset)

# Admins

# Add post
GET         /admin/posts/new                      controllers.Posts.create()
POST        /admin/posts                          controllers.Posts.save()


# Edit existing post
GET         /admin/posts/:id                      controllers.Posts.edit(id: java.util.UUID)
POST        /admin/posts/                         controllers.Posts.doEdit(id: java.util.UUID)


#Admin page
GET         /admin                                controllers.Application.admin()

#Admin page
GET         /login                                controllers.Application.login()

# Authenticate
GET         /logout                               com.feth.play.module.pa.controllers.Authenticate.logout
GET         /authenticate/:provider               com.feth.play.module.pa.controllers.Authenticate.authenticate(provider: String)
GET         /authenticate/:provider/denied        controllers.Application.oAuthDenied(provider: String)

GET         /post/:postTitle                      controllers.Posts.detail(postTitle)